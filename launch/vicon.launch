<?xml version="1.0"?>

<launch>

  <!-- IP and port on Vicon Windows PC -->
  <arg name="datastream_hostport" default="192.168.2.120:801"/>
  <!-- Fixed vicon world frame -->
  <arg name="vicon_world_frame" default="/vicon/world"/>

	<node pkg="vicon_bridge" type="vicon_bridge" name="vicon" output="screen" >
		<param name="stream_mode" value="ServerPush"/>
    <param name="datastream_hostport" value="$(arg datastream_hostport)"/>
		<param name="tf_ref_frame_id" value="$(arg vicon_world_frame)"/>
    <param name="filter_window_size" value="5"/>
    <param name="max_lin_vel" value="10"/> <!-- m/s-->
    <param name="max_ang_vel" value="6.28"/> <!-- rad/s-->
    <param name="max_lin_vel_factor" value="1000"/>
    <param name="max_ang_vel_factor" value="1000"/>
	</node>

</launch>
